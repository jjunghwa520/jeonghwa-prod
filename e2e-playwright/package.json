{
  "name": "kicda-e2e-playwright",
  "version": "0.1.0",
  "private": true,
  "description": "E2E tests for reader/player/admin using Playwright",
  "scripts": {
    "test": "playwright test",
    "test:desktop": "playwright test --project=desktop-1440",
    "test:mobile": "playwright test --project=mobile-390",
    "test:long": "LONG_RUN=1 playwright test --project=long-run",
    "install:browsers": "playwright install"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.2",
    "@types/node": "^20.11.30",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "date-fns": "^3.6.0",
    "dotenv": "^16.4.5"
  }
}



