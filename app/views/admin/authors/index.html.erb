<div class="container py-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>👥 작가 관리</h1>
    <%= link_to '➕ 신규 작가 등록', new_admin_author_path, class: 'btn btn-primary' %>
  </div>

  <div class="card">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>ID</th>
              <th>이름</th>
              <th>역할</th>
              <th>코스 수</th>
              <th>상태</th>
              <th>등록일</th>
              <th>액션</th>
            </tr>
          </thead>
          <tbody>
            <% @authors.each do |author| %>
              <tr>
                <td><%= author.id %></td>
                <td><strong><%= author.name %></strong></td>
                <td>
                  <span class="badge bg-<%= author.role == 'writer' ? 'primary' : author.role == 'illustrator' ? 'success' : 'info' %>">
                    <%= author.role_name %>
                  </span>
                </td>
                <td><%= author.courses.count %>개</td>
                <td>
                  <% if author.active %>
                    <span class="badge bg-success">활성</span>
                  <% else %>
                    <span class="badge bg-secondary">비활성</span>
                  <% end %>
                </td>
                <td><%= author.created_at.strftime('%Y-%m-%d') %></td>
                <td>
                  <div class="btn-group btn-group-sm">
                    <%= link_to '수정', edit_admin_author_path(author), class: 'btn btn-outline-primary' %>
                    <%= link_to '삭제', admin_author_path(author), method: :delete,
                        data: { turbo_method: :delete, turbo_confirm: '정말 삭제하시겠습니까?' },
                        class: 'btn btn-outline-danger' %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
