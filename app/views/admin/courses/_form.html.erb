<%= form_with model: [:admin, @course], class: 'row g-3' do |f| %>
  <div class="col-md-6">
    <%= f.label :title, '제목', class: 'form-label' %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="col-md-6">
    <%= f.label :category, '카테고리', class: 'form-label' %>
    <%= f.text_field :category, class: 'form-control' %>
  </div>
  <div class="col-12">
    <%= f.label :description, '설명', class: 'form-label' %>
    <%= f.text_area :description, rows: 5, class: 'form-control' %>
  </div>
  <div class="col-md-3">
    <%= f.label :price, '가격', class: 'form-label' %>
    <%= f.number_field :price, step: '0.01', class: 'form-control' %>
  </div>
  <div class="col-md-3">
    <%= f.label :level, '레벨', class: 'form-label' %>
    <%= f.text_field :level, class: 'form-control' %>
  </div>
  <div class="col-md-3">
    <%= f.label :duration, '소요시간(분)', class: 'form-label' %>
    <%= f.number_field :duration, class: 'form-control' %>
  </div>
  <div class="col-md-3">
    <%= f.label :status, '상태', class: 'form-label' %>
    <%= f.text_field :status, class: 'form-control' %>
  </div>
  <div class="col-md-6">
    <%= f.label :thumbnail, '썸네일 URL', class: 'form-label' %>
    <%= f.url_field :thumbnail, class: 'form-control' %>
  </div>
  <div class="col-md-3">
    <%= f.label :age, '연령', class: 'form-label' %>
    <%= f.text_field :age, class: 'form-control' %>
  </div>
  <div class="col-md-12">
    <%= f.label :video_url, '비디오 URL(.mp4 또는 .m3u8)', class: 'form-label' %>
    <%= f.url_field :video_url, class: 'form-control', placeholder: '/videos/:id/main.mp4 또는 /videos/:id/index.m3u8' %>
  </div>
  <div class="col-md-12">
    <%= f.label :ebook_pages_root, '전자책 이미지 루트', class: 'form-label' %>
    <%= f.text_field :ebook_pages_root, class: 'form-control', placeholder: '/ebooks/:id/pages' %>
  </div>
  <div class="col-12">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>


