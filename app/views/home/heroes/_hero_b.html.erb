        <div class="neo-cta">
          <%= link_to courses_path, class: "btn-neo primary" do %>전체 보기<% end %>
          <%= link_to teen_content_path, class: "btn-neo ghost" do %>청소년<% end %>
        </div>
      </div>
    </div>
  </div>
