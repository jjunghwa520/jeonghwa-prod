<!-- Hero B - Split 50/50 with Card Copy -->
<section class="hero-neo concept-b">
  <div class="container">
    <div class="grid-neo">
      <div class="neo-left">
        <div class="neo-stage">
          <img src="/images/refined/jeonghwa_refined_isnet-general-use.png" alt="정화 선생님" class="neo-character" loading="lazy" decoding="async">
        </div>
      </div>
      <div class="neo-right card-copy">
        <h1 class="neo-title">우리 아이의 <span class="accent">첫 동화책 플랫폼</span></h1>
