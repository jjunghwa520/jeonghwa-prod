<!-- Hero G - Big Type + Minimal CTA -->
<section class="hero-neo concept-g">
  <div class="container">
    <div class="grid-neo" style="grid-template-columns:1fr;">
      <div class="neo-right" style="text-align:center;">
        <h1 class="neo-title">읽고 듣고 만드는<br><span class="accent">크리에이티브 동화</span></h1>
        <p class="neo-desc" style="margin-left:auto;margin-right:auto;">학습 교과 연계 동화를 재미있게 배워요!</p>
        <div class="neo-cta" style="justify-content:center;">
          <%= link_to courses_path, class: "btn-neo primary" do %>지금 보기<% end %>
        </div>
      </div>
      <div class="neo-left" style="text-align:center;">
        <div class="neo-stage" style="height:420px;">
          <img src="/images/refined/jeonghwa_refined_isnet-general-use.png" alt="정화 선생님" class="neo-character" style="max-width:360px;width:90%;" loading="lazy" decoding="async">
        </div>
      </div>
    </div>
  </div>
</section>



