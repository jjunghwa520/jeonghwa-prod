<!-- Hero C - Brand Bar + Circle Accent -->
<section class="hero-neo concept-c">
  <div class="brand-bar"></div>
  <div class="container">
    <div class="grid-neo">
      <div class="neo-left">
        <div class="neo-stage circle-accent">
          <img src="/images/refined/jeonghwa_refined_isnet-general-use.png" alt="정화 선생님" class="neo-character" loading="lazy" decoding="async">
        </div>
      </div>
      <div class="neo-right">
        <h1 class="neo-title">학부모가 선택한 <span class="accent">프리미엄 동화</span></h1>
        <p class="neo-desc">안전하고 따뜻한 이야기로 상상력을 키워요.</p>
        <div class="neo-cta">
          <%= link_to courses_path, class: "btn-neo primary" do %>콘텐츠 탐색<% end %>
          <%= link_to teen_content_path, class: "btn-neo ghost" do %>청소년<% end %>
        </div>
      </div>
    </div>
  </div>
</section>



