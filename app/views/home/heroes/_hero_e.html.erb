<!-- Hero E - Editorial Variant with layout param: split|center|poster -->
<% layout_mode = (params[:layout].presence || 'split').to_s %>
<section class="hero-neo concept-e">
  <div class="container">
    <% if layout_mode == 'center' %>
      <div class="grid-neo" style="grid-template-columns:1fr">
        <div class="neo-right" style="order:1;text-align:center;max-width:760px;margin:0 auto;">
          <div class="neo-badge">Premium Curation</div>
          <h1 class="neo-title">
            <span class="title-desktop">읽고 듣고 만드는<br><span class="accent">크리에이티브 동화</span></span>
            <span class="title-mobile">읽고 듣고 만드는<br><span class="accent">크리에이티브 동화</span></span>
          </h1>
          <p class="neo-desc">학습 교과 연계 동화를 재미있게 배워요!</p>
          <div class="neo-cta" style="justify-content:center;">
            <%= link_to courses_path, class: "btn-neo primary" do %>콘텐츠 보기<% end %>
            <%= link_to teen_content_path, class: "btn-neo ghost" do %>청소년 콘텐츠<% end %>
          </div>
        </div>
        <div class="neo-left" style="order:2;display:flex;justify-content:center;">
          <div class="neo-stage">
            <img src="/images/refined/jeonghwa_refined_isnet-general-use.png" alt="정화 선생님" class="neo-character" loading="lazy" decoding="async" fetchpriority="high">
          </div>
        </div>
      </div>
    <% elsif layout_mode == 'poster' %>
      <div class="grid-neo" style="grid-template-columns:1fr">
        <div class="neo-right" style="order:1;text-align:center;max-width:820px;margin:0 auto;">
          <div class="neo-badge">Premium Curation</div>
          <h1 class="neo-title" style="font-size:3.6rem;line-height:1.08;">
            <span class="title-desktop">읽고 듣고 만드는<br><span class="accent">크리에이티브 동화</span></span>
            <span class="title-mobile">읽고 듣고 만드는<br><span class="accent">크리에이티브 동화</span></span>
          </h1>
          <p class="neo-desc">학습 교과 연계 동화를 재미있게 배워요!</p>
          <div class="neo-cta" style="justify-content:center;">
            <%= link_to courses_path, class: "btn-neo primary" do %>콘텐츠 보기<% end %>
            <%= link_to teen_content_path, class: "btn-neo ghost" do %>청소년 콘텐츠<% end %>
          </div>
        </div>
        <div class="neo-left" style="order:2;display:flex;justify-content:center;">
          <div class="neo-stage">
            <img src="/images/refined/jeonghwa_refined_isnet-general-use.png" alt="정화 선생님" class="neo-character" style="filter:drop-shadow(0 20px 40px rgba(0,0,0,.12))" loading="lazy" decoding="async" fetchpriority="high">
          </div>
        </div>
      </div>
    <% else %>
      <!-- split (default): left text 3fr, right character 2fr -->
      <div class="grid-neo" style="grid-template-columns:3fr 2fr;gap:4rem;align-items:center;">
        <div class="neo-right" style="order:1;max-width:600px;width:100%;margin:0 auto;">
          <div class="neo-badge">Premium Curation</div>
          <h1 class="neo-title">
            <span class="title-desktop">읽고 듣고 만드는<br><span class="accent">크리에이티브 동화</span></span>
            <span class="title-mobile">읽고 듣고 만드는<br><span class="accent">크리에이티브 동화</span></span>
          </h1>
          <p class="neo-desc">학습 교과 연계 동화를 재미있게 배워요!</p>
          <div class="neo-cta">
            <%= link_to courses_path, class: "btn-neo primary" do %>콘텐츠 보기<% end %>
            <%= link_to teen_content_path, class: "btn-neo ghost" do %>청소년 콘텐츠<% end %>
          </div>
        </div>
        <div class="neo-left" style="order:2;">
          <div class="neo-stage">
            <img src="/images/refined/jeonghwa_refined_isnet-general-use.png" alt="정화 선생님" class="neo-character" loading="lazy" decoding="async" fetchpriority="high">
          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>

