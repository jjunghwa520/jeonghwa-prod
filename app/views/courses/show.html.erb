        } else {
          // ì—ëŸ¬ ì²˜ë¦¬
          alert(data.message || 'ì¥ë°”êµ¬ë‹ˆ ì¶”ê°€ì— ì‹¤íŒ¨í–ˆìŠµë‹ˆë‹¤.');
          button.disabled = false;
          button.textContent = 'ğŸ›’ ì¥ë°”êµ¬ë‹ˆì— ë‹´ê¸°';
