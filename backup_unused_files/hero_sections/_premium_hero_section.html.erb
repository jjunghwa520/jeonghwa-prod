<!-- 프리미엄 깔끔한 히어로 섹션 -->
<section class="premium-hero-section">
  <div class="container">
    <div class="row justify-content-center align-items-center min-vh-100">
      
      <!-- 중앙 전체 콘텐츠 영역 -->
      <div class="col-12">
        <div class="hero-content-premium text-center">
          <!-- 브랜드 배지 -->
          <div class="brand-badge">
            <span class="badge-icon">📚</span>
            <span class="badge-text">정화의 서재</span>
          </div>
          
          <!-- 메인 타이틀 -->
          <h1 class="hero-title-premium">
            아이들의 <span class="title-highlight">상상력</span>을<br>
            키우는 <span class="title-highlight">동화 세상</span>
          </h1>
          
          <!-- 서브 타이틀 -->
          <p class="hero-subtitle-premium">
            전문 교육자가 설계한 체계적인 동화 교육 플랫폼으로<br>
            아이의 창의력, 표현력, 사고력을 함께 키워나가세요
          </p>
          
          <!-- 핵심 서비스 -->
          <div class="core-services">
            <div class="service-item">
              <div class="service-icon">📖</div>
              <div class="service-info">
                <h4>전자동화책</h4>
                <p>인터랙티브 디지털 동화</p>
              </div>
            </div>
            <div class="service-item">
              <div class="service-icon">🎭</div>
              <div class="service-info">
                <h4>구연동화</h4>
                <p>생생한 스토리텔링 영상</p>
              </div>
            </div>
            <div class="service-item">
              <div class="service-icon">✏️</div>
              <div class="service-info">
                <h4>동화만들기</h4>
                <p>창작 교육 프로그램</p>
              </div>
            </div>
          </div>
          
          <!-- 액션 버튼 -->
          <div class="hero-actions-premium">
            <a href="/courses" class="btn-premium primary">
              <span class="btn-icon">🚀</span>
              <span class="btn-text">지금 시작하기</span>
            </a>
            <a href="/courses?category=trial" class="btn-premium secondary">
              <span class="btn-icon">👀</span>
              <span class="btn-text">무료 체험</span>
            </a>
          </div>
          
          <!-- 신뢰 지표 -->
          <div class="trust-indicators">
            <div class="indicator-item">
              <div class="indicator-number">1,000+</div>
              <div class="indicator-label">만족한 가족</div>
            </div>
            <div class="indicator-item">
              <div class="indicator-number">5,000+</div>
              <div class="indicator-label">완성된 동화</div>
            </div>
            <div class="indicator-item">
              <div class="indicator-number">4.9★</div>
              <div class="indicator-label">평균 만족도</div>
            </div>
          </div>
          
          <!-- 중앙 캐릭터 영역 -->
          <div class="character-showcase-center">
            <!-- 메인 정화 캐릭터 -->
            <div class="main-character-center">
              <img src="/images/refined/jeonghwa_refined_isnet-general-use.png?v=<%= Time.current.to_i %>" 
                   alt="정화 선생님" 
                   class="character-image-center"
                   onerror="this.src='/images/refined/jeonghwa_magic_wand_refined.png'">
              
              <!-- 캐릭터 인사말 -->
              <div class="character-greeting-center">
                <div class="greeting-bubble-center">
                  <p>안녕하세요! 정화입니다 👋</p>
                  <p class="greeting-sub">함께 동화 세상을 탐험해요!</p>
                </div>
              </div>
            </div>
            
            <!-- 보조 캐릭터들 (양옆에 배치) -->
            <div class="supporting-characters-center">
              <div class="support-char bear-left">
                <img src="/images/separated/bear_separated.png?v=<%= Time.current.to_i %>" 
                     alt="곰 친구" 
                     class="support-char-image-center">
              </div>
              <div class="support-char rabbit-right">
                <img src="/images/separated/rabbit_separated.png?v=<%= Time.current.to_i %>" 
                     alt="토끼 친구" 
                     class="support-char-image-center">
              </div>
            </div>
            
            <!-- 장식 요소들 -->
            <div class="decorative-elements-center">
              <div class="floating-element book-center">📚</div>
              <div class="floating-element star-center">⭐</div>
              <div class="floating-element heart-center">💝</div>
              <div class="floating-element sparkle-center">✨</div>
            </div>
          </div>
        </div>
      </div>
      
    </div>
  </div>
  
  <!-- 부드러운 스크롤 안내 -->
  <div class="scroll-hint-premium">
    <div class="scroll-text">더 많은 콘텐츠 보기</div>
    <div class="scroll-arrow">↓</div>
  </div>
</section>
