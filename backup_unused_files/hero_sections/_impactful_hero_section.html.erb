<!-- 임팩트 있는 히어로 섹션 -->
<section class="impactful-hero-section">
  <!-- 배경 레이어 -->
  <div class="hero-background-layers">
    <div class="bg-gradient-primary"></div>
    <div class="bg-pattern-subtle"></div>
    <div class="bg-glow-effects"></div>
  </div>
  
  <div class="container">
    <div class="row align-items-center min-vh-100">
      
      <!-- 왼쪽 콘텐츠 영역 -->
      <div class="col-lg-6">
        <div class="hero-content-impactful">
          <!-- 브랜드 로고 영역 -->
          <div class="brand-header">
            <div class="brand-logo">
              <span class="logo-icon">📚</span>
              <span class="logo-text">정화의 서재</span>
            </div>
            <div class="brand-tagline">동화책 전문 교육 플랫폼</div>
          </div>
          
          <!-- 메인 타이틀 -->
          <h1 class="hero-title-impactful">
            <span class="title-line-1">아이들의 상상력을</span>
            <span class="title-line-2">키우는 <span class="title-highlight">동화 세상</span></span>
          </h1>
          
          <!-- 서브 타이틀 -->
          <p class="hero-subtitle-impactful">
            전문 교육자가 설계한 체계적인 동화 교육으로<br>
            아이의 <strong>창의력</strong>, <strong>표현력</strong>, <strong>사고력</strong>을 함께 키워나가세요
          </p>
          
          <!-- 핵심 기능 하이라이트 -->
          <div class="feature-highlights">
            <div class="feature-item">
              <div class="feature-icon">📖</div>
              <span>전자동화책</span>
            </div>
            <div class="feature-item">
              <div class="feature-icon">🎭</div>
              <span>구연동화</span>
            </div>
            <div class="feature-item">
              <div class="feature-icon">✏️</div>
              <span>동화만들기</span>
            </div>
            <div class="feature-item">
              <div class="feature-icon">🌟</div>
              <span>청소년 콘텐츠</span>
            </div>
          </div>
          
          <!-- 액션 버튼 -->
          <div class="hero-actions-impactful">
            <a href="/courses" class="btn-hero-primary">
              <span class="btn-shine"></span>
              <span class="btn-content">
                <span class="btn-icon">🚀</span>
                <span class="btn-text">지금 시작하기</span>
              </span>
            </a>
            <a href="/courses?category=trial" class="btn-hero-secondary">
              <span class="btn-icon">👀</span>
              <span class="btn-text">무료 체험</span>
            </a>
          </div>
          
          <!-- 신뢰 지표 -->
          <div class="trust-stats">
            <div class="stat-item">
              <div class="stat-number">1,000+</div>
              <div class="stat-label">만족한 가족</div>
            </div>
            <div class="stat-divider">•</div>
            <div class="stat-item">
              <div class="stat-number">5,000+</div>
              <div class="stat-label">완성된 동화</div>
            </div>
            <div class="stat-divider">•</div>
            <div class="stat-item">
              <div class="stat-number">4.9★</div>
              <div class="stat-label">평균 만족도</div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- 오른쪽 캐릭터 영역 -->
      <div class="col-lg-6">
        <div class="character-showcase-impactful">
          <!-- 메인 캐릭터 스포트라이트 -->
          <div class="character-spotlight">
            <div class="spotlight-ring"></div>
            <div class="spotlight-glow"></div>
            
            <!-- 정화 선생님 -->
            <div class="main-character-hero">
              <img src="/images/refined/jeonghwa_refined_isnet-general-use.png?v=<%= Time.current.to_i %>" 
                   alt="정화 선생님" 
                   class="character-image-hero"
                   onerror="this.src='/images/refined/jeonghwa_magic_wand_refined.png'">
              
              <!-- 동적 인사말 -->
              <div class="hero-greeting">
                <div class="greeting-bubble-hero">
                  <div class="typing-text-hero">안녕하세요! 함께 동화 세상을 탐험해요! ✨</div>
                </div>
              </div>
            </div>
          </div>
          
          <!-- 보조 캐릭터들 (주변 배치) -->
          <div class="companion-characters">
            <div class="companion bear-companion">
              <img src="/images/separated/bear_separated.png?v=<%= Time.current.to_i %>" 
                   alt="곰 친구" 
                   class="companion-image">
              <div class="companion-bubble">재미있어요! 🎉</div>
            </div>
            <div class="companion rabbit-companion">
              <img src="/images/separated/rabbit_separated.png?v=<%= Time.current.to_i %>" 
                   alt="토끼 친구" 
                   class="companion-image">
              <div class="companion-bubble">배우고 싶어요! 📚</div>
            </div>
          </div>
          
          <!-- 마법 효과들 -->
          <div class="magical-atmosphere">
            <div class="magic-particle particle-1">✨</div>
            <div class="magic-particle particle-2">🌟</div>
            <div class="magic-particle particle-3">💫</div>
            <div class="magic-particle particle-4">⭐</div>
            <div class="floating-book book-1">📚</div>
            <div class="floating-book book-2">📖</div>
            <div class="floating-heart heart-1">💝</div>
          </div>
        </div>
      </div>
      
    </div>
  </div>
  
  <!-- 스크롤 인디케이터 -->
  <div class="scroll-indicator-impactful">
    <div class="scroll-text">아래로 스크롤하여 더 많은 콘텐츠를 확인하세요</div>
    <div class="scroll-arrow-animated">↓</div>
  </div>
</section>

