        age_groups = ['baby', 'toddler', 'elementary']
        cultures = ['korean', 'japanese', 'western']
        preferences = ['neutral', 'adventure', 'fantasy']
        
        # 각 문화권별로 9개씩 (3개 연령대 × 3개 성향)
        courses_by_culture = {
          'korean' => Course.limit(9),
          'japanese' => Course.limit(9),
          'western' => Course.limit(9)
        }
        
        cultures.each do |culture|
          courses_by_culture[culture].each_with_index do |course, idx|
            age_group = age_groups[idx % 3]
            preference = preferences[(idx / 3) % 3]
      %>
        <%= link_to course_path(course), class: "content-card culture-#{culture}", 
             data: {
               age_group: age_group,
               theme: (theme_map = %w[nature adventure fantasy daily emotion tradition]; theme_map[idx % theme_map.length]),
               goal: (goal_map = %w[language thinking emotion creativity science habit]; goal_map[(idx / 2) % goal_map.length]),
               length: (length_key = if course.duration.to_i < 3
                 'short'
               elsif course.duration.to_i <= 7
                 'medium'
               elsif course.duration.to_i <= 15
                 'long'
               else
                 'xl'
               end; length_key),
               level: (course.level == 'beginner' ? 'easy' : 'normal')
             } do %>
          <div class="content-thumbnail">
            <% 
              category = if course.category == "전자동화책" || course.category == "ebook"
                "ebook"
              elsif course.category == "구연동화" || course.category == "storytelling"
                "storytelling"
              else
                "education"
              end
              
              # 제목별 구체적인 썸네일 사용 (안전한 처리)
              begin
                title_key = course.title.to_s.gsub(/[^\w가-힣]/, '_').gsub(/_+/, '_')
                title_specific_path = "generated/title_specific/#{culture}_#{preference}_#{age_group}_#{title_key}.jpg"
              rescue => e
                title_specific_path = nil
              end
              abstract_thumbnail_path = "generated/abstract/#{culture}_#{preference}_#{age_group}_#{(idx % 3) + 1}.jpg"
              storybook_thumbnail_path = "generated/storybook/#{culture}_#{preference}_#{age_group}_#{(idx % 3) + 1}.jpg"
              cultural_thumbnail_path = "generated/cultural/#{culture}_#{preference}_#{age_group}_1.jpg"
              cultural_svg_path = "generated/cultural/#{culture}_#{preference}_#{age_group}_1.svg"
              age_thumbnail_path = "generated/age_groups/#{age_group}_#{category}_#{(idx % 3) + 1}.jpg"
              kids_thumbnail_path = "generated/kids/#{category}_#{(course.id % 6) + 1}.jpg"
              
              # 제목별 맞춤 Vertex AI 이미지 최우선 적용
              clean_title = course.title.gsub(/[^\w\s가-힣]/, '').strip.gsub(/\s+/, '_')
              title_specific_vertex_path = "generated/title_specific_vertex/#{clean_title}_#{course.id}.jpg"
              title_matched_path = ThumbnailMatcherHelper.get_title_specific_thumbnail(course.title, course.id)
              
              if Rails.application.assets && Rails.application.assets.find_asset(title_specific_vertex_path)
                thumbnail_path = title_specific_vertex_path
              elsif title_matched_path && Rails.application.assets && Rails.application.assets.find_asset(title_matched_path)
                thumbnail_path = title_matched_path
              elsif title_specific_path && Rails.application.assets && Rails.application.assets.find_asset(title_specific_path)
                thumbnail_path = title_specific_path
              elsif Rails.application.assets && Rails.application.assets.find_asset(abstract_thumbnail_path)
                thumbnail_path = abstract_thumbnail_path
              elsif Rails.application.assets && Rails.application.assets.find_asset(storybook_thumbnail_path)
                thumbnail_path = storybook_thumbnail_path
              elsif Rails.application.assets && Rails.application.assets.find_asset(cultural_thumbnail_path)
                thumbnail_path = cultural_thumbnail_path
              elsif Rails.application.assets && Rails.application.assets.find_asset(cultural_svg_path)
                thumbnail_path = cultural_svg_path
              elsif Rails.application.assets && Rails.application.assets.find_asset(age_thumbnail_path)
                thumbnail_path = age_thumbnail_path
              elsif Rails.application.assets && Rails.application.assets.find_asset(kids_thumbnail_path)
                thumbnail_path = kids_thumbnail_path
              else
                thumbnail_path = "generated/courses/#{category}_#{(course.id % 6) + 1}.jpg"
              end
            %>
            
            <% if course.category == "전자동화책" || course.category == "ebook" %>
              <div class="thumbnail-badge ebook">전자책</div>
            <% elsif course.category == "구연동화" || course.category == "storytelling" %>
              <div class="thumbnail-badge storytelling">구연동화</div>
            <% else %>
              <div class="thumbnail-badge education">교육</div>
            <% end %>
            
            <% if Rails.application.assets && Rails.application.assets.find_asset(thumbnail_path) %>
              <%= image_tag thumbnail_path, alt: course.title, class: "thumbnail-image" %>
            <% else %>
              <div class="thumbnail-placeholder">
                <span class="thumbnail-icon">
                  <%= course.category == "education" ? "✏️" : (course.category == "storytelling" ? "🎭" : "📖") %>
                </span>
              </div>
            <% end %>
          </div>
          
          <div class="content-info">
            <h4><%= course.title.truncate(20) %></h4>
            <p class="content-author"><%= course.instructor.name %></p>
            <div class="content-footer">
              <span class="content-rating">
                <% if course.reviews.any? %>
                  ⭐ <%= course.reviews.average(:rating).round(1) %>
                <% else %>
                  <span class="text-muted">평가 없음</span>
                <% end %>
              </span>
              <span class="content-price">
                <% if course.price == 0 %>
                  무료
                <% else %>
                  <%= number_to_currency(course.price, unit: "", precision: 0) %>원
                <% end %>
              </span>
            </div>
            <div class="content-chips">
              <span class="chip age"><%= age_group == 'baby' ? '0-3' : (age_group == 'toddler' ? '4-7' : '8-12') %></span>
              <span class="chip length"><%=
                {'short'=>'<3m','medium'=>'3-7m','long'=>'8-15m','xl'=>'>15m'}[length_key]
              %></span>
              <% if course.price.to_i == 0 %>
                <span class="chip free">무료</span>
              <% end %>
              <% if course.reviews.count.to_i >= 5 %>
                <span class="chip popular">인기</span>
              <% end %>
            </div>
          </div>
        <% end %>
      <% end %>
      <% end %>
    </div>
    
    <div class="section-footer">
      <%= link_to "전체 콘텐츠 보기 →", courses_path, class: "btn-modern outline" %>
