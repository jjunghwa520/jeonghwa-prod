<script>
document.addEventListener('DOMContentLoaded', function() {
  // 필터 상태 저장
  let filters = {
    age: 'all',
    theme: 'all',
    goal: 'all',
    length: 'all',
    level: 'all'
  };
  
  // 카드 필터링 함수
  function filterCards() {
    const contentCards = document.querySelectorAll('.content-card');
    
    contentCards.forEach(card => {
      const ageMatch = filters.age === 'all' || card.dataset.ageGroup === filters.age;
      const themeMatch = filters.theme === 'all' || card.dataset.theme === filters.theme;
      const goalMatch = filters.goal === 'all' || card.dataset.goal === filters.goal;
      const lengthMatch = filters.length === 'all' || card.dataset.length === filters.length;
      const levelMatch = filters.level === 'all' || card.dataset.level === filters.level;
      
      if (ageMatch && themeMatch && goalMatch && lengthMatch && levelMatch) {
        card.style.display = 'block';
      } else {
        card.style.display = 'none';
      }
    });
  }
  
  // 연령 필터 탭 기능
  const ageTabs = document.querySelectorAll('.age-tab');
  ageTabs.forEach(tab => {
    tab.addEventListener('click', function() {
      ageTabs.forEach(t => t.classList.remove('active'));
      this.classList.add('active');
      filters.age = this.dataset.age;
      filterCards();
    });
  });
  
  // 주제 필터 탭 기능
  const themeTabs = document.querySelectorAll('.theme-tab');
  themeTabs.forEach(tab => {
    tab.addEventListener('click', function() {
      themeTabs.forEach(t => t.classList.remove('active'));
      this.classList.add('active');
      filters.theme = this.dataset.theme;
      filterCards();
    });
  });
  
  // 학습목표 필터 탭 기능
  const goalTabs = document.querySelectorAll('.goal-tab');
  goalTabs.forEach(tab => {
    tab.addEventListener('click', function() {
      goalTabs.forEach(t => t.classList.remove('active'));
      this.classList.add('active');
      filters.goal = this.dataset.goal;
      filterCards();
    });
  });

  // 길이 필터 탭 기능
  const lengthTabs = document.querySelectorAll('.length-tab');
  lengthTabs.forEach(tab => {
    tab.addEventListener('click', function() {
      lengthTabs.forEach(t => t.classList.remove('active'));
      this.classList.add('active');
      filters.length = this.dataset.length;
      filterCards();
    });
  });

  // 난이도 필터 탭 기능
  const levelTabs = document.querySelectorAll('.level-tab');
  levelTabs.forEach(tab => {
    tab.addEventListener('click', function() {
      levelTabs.forEach(t => t.classList.remove('active'));
      this.classList.add('active');
      filters.level = this.dataset.level;
      filterCards();
    });
  });
  
  // 초기 상태: 모든 카드 표시
  filterCards();
});
</script>
