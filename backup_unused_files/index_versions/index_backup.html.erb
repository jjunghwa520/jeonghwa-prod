<script>
document.addEventListener('DOMContentLoaded', function() {
  // í•„í„° ìƒíƒœ ì €ì¥
  let filters = {
    age: 'all',
    theme: 'all',
    goal: 'all',
    length: 'all',
    level: 'all'
  };
  
  // ì¹´ë“œ í•„í„°ë§ í•¨ìˆ˜
  function filterCards() {
    const contentCards = document.querySelectorAll('.content-card');
    
    contentCards.forEach(card => {
      const ageMatch = filters.age === 'all' || card.dataset.ageGroup === filters.age;
      const themeMatch = filters.theme === 'all' || card.dataset.theme === filters.theme;
      const goalMatch = filters.goal === 'all' || card.dataset.goal === filters.goal;
      const lengthMatch = filters.length === 'all' || card.dataset.length === filters.length;
      const levelMatch = filters.level === 'all' || card.dataset.level === filters.level;
      
      if (ageMatch && themeMatch && goalMatch && lengthMatch && levelMatch) {
        card.style.display = 'block';
      } else {
        card.style.display = 'none';
      }
    });
  }
  
  // ì—°ë ¹ í•„í„° íƒ­ ê¸°ëŠ¥
  const ageTabs = document.querySelectorAll('.age-tab');
  ageTabs.forEach(tab => {
    tab.addEventListener('click', function() {
      ageTabs.forEach(t => t.classList.remove('active'));
      this.classList.add('active');
      filters.age = this.dataset.age;
      filterCards();
    });
  });
  
  // ì£¼ì œ í•„í„° íƒ­ ê¸°ëŠ¥
  const themeTabs = document.querySelectorAll('.theme-tab');
  themeTabs.forEach(tab => {
